pipeline{
    agent any

    tools {nodejs "node"}

    stages{
        stage("Checkout"){
            steps{
                checkout scm
            }
        }

        stage("Build"){
            steps{
                sh 'npm install'
                sh 'npm run build'
            }
        }

        stage("Test"){
            steps{
                sh 'npm test'
            }
        }

        stage("Build Image"){
            steps{
                sh 'docker build -t cicd_demo:latest .'
            }
        }
    }
}